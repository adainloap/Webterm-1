<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('includes/head.ejs', { title: 'WebTerm - 2FA' }) %>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#121212] text-gray-100 flex items-center justify-center min-h-screen">

  <div class="w-full max-w-md p-8 space-y-8 bg-black/70 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center">Two-Factor Authentication</h1>

    <% if (error) { %>
      <div class="text-center font-medium text-red-500"><%= error %></div>
    <% } %>

    <div class="space-y-6">
      <% if (twoFactorMethod === 'authenticator') { %>
        <div class="p-6 border border-gray-700 rounded-lg space-y-4">
          <h2 class="text-xl font-semibold text-center">Authenticator App</h2>
          <p class="text-gray-400 text-sm text-center">
            Enter the 6-digit code from your authenticator app.
          </p>
          <form action="/2fa-login" method="POST" class="space-y-4">
            <input type="text" 
                   name="token" 
                   placeholder="Enter 6-digit code" 
                   required 
                   maxlength="6"
                   class="w-full px-4 py-2 text-gray-900 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button type="submit" 
                    class="w-full px-4 py-2 font-bold text-white bg-green-600 rounded-md hover:bg-green-700 transition">
              Verify Code
            </button>
          </form>
        </div>
      <% } else if (twoFactorMethod === 'email') { %>
        <div class="p-6 border border-gray-700 rounded-lg space-y-4">
          <h2 class="text-xl font-semibold text-center">Email Verification</h2>
          <p class="text-gray-400 text-sm text-center">
            A one-time code has been sent to your email.
          </p>
          <form id="email-2fa-form" action="/2fa-verify-email" method="POST" class="space-y-4">
            <input type="text" 
                   name="emailToken" 
                   placeholder="Enter code from email" 
                   required 
                   maxlength="6"
                   class="w-full px-4 py-2 text-gray-900 bg-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button type="submit" 
                    class="w-full px-4 py-2 font-bold text-white bg-green-600 rounded-md hover:bg-green-700 transition">
              Verify Code
            </button>
          </form>
          <button id="resend-email-code" 
                  type="button"
                  class="w-full text-sm text-gray-400 mt-2 hover:underline">
            Resend code
          </button>
        </div>
      <% } else if (twoFactorMethod === 'webauthn') { %>
        <div class="p-6 border border-gray-700 rounded-lg space-y-4">
          <h2 class="text-xl font-semibold text-center">Fingerprint / FaceID</h2>
          <button id="webauthn-start-login" 
                  class="w-full px-4 py-2 font-bold text-white bg-purple-600 rounded-md hover:bg-purple-700 transition">
            Login with Biometrics
          </button>
        </div>
      <% } %>
    </div>

    <div class="text-center mt-4">
      <a href="/login" class="text-blue-400 hover:underline">Back to Login</a>
    </div>
  </div>

  <script src="/js/webauthn.js"></script>
</body>
</html>
